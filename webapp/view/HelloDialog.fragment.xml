<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="helloDialog"
        title="Hello {/wombatTheDude/name}"
        draggable="true"
        resizable="true">
        <content>
            <core:Icon
                src="sap-icon://cargo-train"
                size="8rem"
                class="sapUiMediumMargin"></core:Icon>
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"></Button>
        </beginButton>
    </Dialog>

</core:FragmentDefinition>