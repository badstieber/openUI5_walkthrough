<mvc:View controllerName="badstieber.walkthrough.controller.App"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel
                            headerText="{i18n>helloPanelTitle}"
                            class="sapUiResponsiveMargin"
                            width="auto">
                            <content>
                                <Button
                                    text="{i18n>showHelloButtonText}"
                                    press=".onShowHello"
                                    class="sapUiSmallMarginEnd">
                                </Button>
                                <Input
                                    value="{/wombatTheDude/name}"
                                    valueLiveUpdate="true"
                                    width="60%">
                                </Input>
                                <Text 
                                    text="Yowah {/wombatTheDude/name}"
                                    class="sapUiSmallMargin">
                                </Text>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>